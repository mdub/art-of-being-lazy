!!!5
%html

  %head
    %meta(charset="utf-8")
    %link{ :href=>href("styles.css"), :rel=>"stylesheet", :type=>"text/css" }
    %title= page.title
    ~ content_for[:head]

  %body

    %header
      %nav
        %h1= page.title
        %ul
          %li
            %button#prev-btn(title="Previous Slide") Previous Slide
          %li
            %span#slide-number
            of
            %span#slide-total
          %li
            %button#next-btn(title="Next Slide") Next Slide

    #deck
      ~ yield

  %script{:src => href("jquery-1.5.2.min.js")}
  %script{:src => href("jquery.jswipe-0.1.2.js")}
  %script{:src => href("htmlSlides.js")}

  :javascript

    $(function() {
      
      //You can trigger Javascript based on the slide number like this:
      $('html').bind('newSlide', function(e, id) { 
        switch(id) {
          case 2:
            console.log('This is the second slide.');;
            break;
          case 3:
            console.log('Hello, third slide.');
            break;
        }
      });

      //One little option: hideToolbar (boolean; default = false)
      htmlSlides.init({ hideToolbar: true });

    });
